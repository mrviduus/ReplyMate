{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "webextensions": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "no-debugger": "error",
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": "error",
    "no-eval": "error",
    "no-implied-eval": "error"
  },
  "overrides": [
    {
      "files": ["**/*.test.ts", "**/*.spec.ts"],
      "env": {
        "jest": true
      }
    },
    {
      "files": ["src/content.js"],
      "env": {
        "browser": true,
        "webextensions": true
      },
      "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "script"
      }
    }
  ],
  "ignorePatterns": [
    "dist/",
    "packages/",
    ".parcel-cache/",
    "node_modules/",
    "coverage/"
  ]
}
