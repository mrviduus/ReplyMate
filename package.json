{
  "name": "replymate-extension",
  "version": "0.2.6",
  "description": "AI-powered LinkedIn assistant for generating professional reply suggestions locally in your browser",
  "private": true,
  "scripts": {
    "dev": "parcel watch src/manifest.json --config @parcel/config-webextension",
    "build": "parcel build src/manifest.json --config @parcel/config-webextension",
    "build:script": "./scripts/build.sh",
    "package": "./scripts/package.sh",
    "version:bump": "./scripts/version-bump.sh",
    "zip": "npm run build && npm run package",
    "clean": "rm -rf dist packages .parcel-cache",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false --maxWorkers=2",
    "lint": "eslint src/**/*.js --max-warnings=0",
    "lint:fix": "eslint src/**/*.js --fix",
    "lint:report": "eslint src/**/*.{ts,js} --format json --output-file eslint-report.json",
    "format": "prettier --write \"src/**/*.{ts,js,css,html,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,css,html,json}\"",
    "type-check": "tsc --noEmit --project tsconfig.json",
    "validate-manifest": "node -e \"const m=require('./dist/manifest.json'); console.log('âœ… Valid:', m.name, 'v'+m.version)\""
  },
  "keywords": ["chrome-extension", "linkedin", "ai", "reply-assistant", "webllm", "productivity"],
  "author": "ReplyMate Team",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrviduus/ReplyMate.git"
  },
  "bugs": {
    "url": "https://github.com/mrviduus/ReplyMate/issues"
  },
  "homepage": "https://github.com/mrviduus/ReplyMate#readme",
  "devDependencies": {
    "@parcel/config-webextension": "^2.9.3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/chrome": "^0.0.242",
    "@types/jest": "^30.0.0",
    "@types/progressbar.js": "^1.1.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "buffer": "^6.0.3",
    "chrome-types": "^0.1.361",
    "eslint": "^8.57.0",
    "eslint-plugin-jest": "^27.9.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "jsdom": "^26.1.0",
    "parcel": "^2.9.3",
    "prettier": "^3.2.5",
    "process": "^0.11.10",
    "ts-jest": "^29.4.0",
    "typescript": "^5.3.0",
    "url": "^0.11.1"
  },
  "dependencies": {
    "@mlc-ai/web-llm": "^0.2.79",
    "progressbar.js": "^1.1.0"
  }
}
